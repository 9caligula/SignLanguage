<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".SpecificLessonActivity"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/progressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp">

        <ProgressBar
            android:id="@+id/progress"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:progress="50"
            android:theme="@style/progressBar2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_below="@id/progressBarLayout">

        <ImageView
            android:id="@+id/imageLesson"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_360sdp"
            android:layout_centerInParent="true" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageLayout"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardWithText"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="@color/colorForWidget"
            app:cardCornerRadius="@dimen/_5sdp">

            <TextView
                android:id="@+id/titleLesson"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="titleLesson"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_15sdp" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/continueBtn"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_below="@id/cardWithText"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/colorForHeadAndBtn"
            android:text="Продолжить"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>

</RelativeLayout>